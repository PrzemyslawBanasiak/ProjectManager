<section class="content-header">
  <h1>
    Tasks
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-tasks"></i> Tasks</a></li>
    <li class="active">Tasks</li>
  </ol>
</section>

<section class="content">
  <ul class="list-group">
    <% @tasks.each do |task| %>
        <%= link_to(task, :class => "list-group-item col-md-12") do %>
            <div class="col-md-10">
              <span>
                <p><b><%= task.name %></b></p>
                <p><%= task.description %></p>
                <p><%= task.assignee %></p>
                <table>
                  <div class="pull-left">
                    <%= link_to 'Edit', edit_task_path(task), :class => "btn btn-default" %>
                  </div>
                  <div class="pull-left">
                    <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
                  </div>
                </table>
                <div class="form-group row">
                  <label class="pull-right">Created at <%= task.created_at.strftime('%d %b %Y') %></label>
                </div>
              </span>
            </div>
        <% end %>
    <% end %>
  </ul>
</section>
