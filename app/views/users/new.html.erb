<% provide(:title, "Create New Project") %>

<div class="wrapper2">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :html => {:class => "form-signin"}) do |f| %>
        <h2 class="form-signin-heading">New Project</h2>
        <%= render 'shared/error_messages' %>
        <div class="top-buffer"/>
        <%= f.text_field :name, class: 'form-control', placeholder: :name %>
        <div class="top-buffer"/>
        <%= f.email_field :email, class: 'form-control', placeholder: :email %>
        <div class="top-buffer"/>
        <%= f.password_field :password, class: 'form-control', placeholder: :password  %>
        <div class="top-buffer"/>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: :password_confirmation  %>
        <div class="top-buffer"/><br/>
        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
