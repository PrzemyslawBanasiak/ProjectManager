<% provide(:title, "Log work time") %>

<section class="content">
  <div class="wrapper2">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@workLog, :html => {:class => "form-signin"}) do |f| %>
          <h2 class="form-signin-heading">Log work time</h2>
          <div class="top-buffer"/>
          <%= f.select :task_id, options_for_select([[@task.name, @task.id]]), class: 'form-control' %>
          <div class="top-buffer"/>
          <%= f.number_field :value, class: 'form-control', placeholder: :value %>
          <div class="top-buffer"/>
          <%= f.text_area :comment, placeholder: :comment, class: 'form-control' %>
          <div class="top-buffer"/><br/>
          <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>
