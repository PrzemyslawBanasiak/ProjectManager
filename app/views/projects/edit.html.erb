<section class="content-header">
  <h1>
    Project
    <small> <%= @project.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i> Project</a></li>
    <li class="active"><%= @project.name %></li>
  </ol>
</section>
<section class="content">
  <div class="col-md-7">
    <%= form_for(@project, :html => {:class => 'form'}) do |f| %>
        <div class="row">
          <div class="box box-primary">
            <div class="box-body">
              <div class="box-header">
                <h3 class="box-title">Edit project</h3>
              </div>
              <div class="col-md-7">
                <div class="form-group row">
                  <%= f.label :name, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-10">
                    <%= f.text_field :name, readonly: @readOnly, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group  row">
                  <%= f.label :description, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-10">
                    <%= f.text_field :description, readonly: @readOnly, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-10">
                    Starts at <%= @project.start_time.strftime('%d %b %Y') %>
                  </label>
                </div>
                <div class="form-group row">
                  <label class="col-sm-10">
                    End at <%= @project.end_time.strftime('%d %b %Y') %>
                  </label>
                </div>
              </div>
            </div>
        <% if (!@readOnly) %>
            <div class="box-footer">
              <%= f.submit "Submit", class: "btn btn-default" %>
            </div>
        <% end %>
          </div>
        </div>
    <% end %>
  </div>
</section>