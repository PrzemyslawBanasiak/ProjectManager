<section class="content-header">
  <h1>
    <%= @project.name %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-book"></i>Project</a></li>
    <li class="active"><%= @project.name %></li>
  </ol>
</section>

<section class="content">
  <div class="col-md-8">
    <%= form_for(@project, :html => {:class => 'form'}) do |f| %>
        <div class="row">
          <div class="box box-primary">
            <div class="box-body">
              <div class="box-header">
                <h3 class="box-title">Project Settings</h3>
              </div>
              <div class="col-md-5">
                <div class="box-body">
                  <%= image_tag(@project.avatarFileName, :class => 'img-responsive') %>
                  <% if (!@readOnly) %>
                      <%= f.file_field :avatarFileName %>
                  <% end %>
                </div>
              </div>
              <div class="col-md-7">
                <div class="form-group row">
                  <%= f.label :name, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.text_field :name, readonly: @readOnly, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group  row">
                  <%= f.label :description, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.text_field :description, readonly: @readOnly, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label :start_time, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.text_field :start_time, readonly: @readOnly, class: 'form-control', :data => {:provide => "datepicker"} %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label :end_time, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.text_field :end_time, readonly: @readOnly, class: 'form-control', :data => {:provide => "datepicker"} %>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="pull-right">
                    Created at <%= @project.created_at.strftime('%d %b %Y') %>
                  </label>
                </div>
              </div>
            </div>
        <% if (!@readOnly) %>
            <div class="box-footer">
              <div class="form-group column">
                <button_to class="pull-right">
                  <%= button_to 'Update', @project, method: :update, :class => "btn btn-default"%>
                </button_to>
                <button_to class="pull-left">
                  <%= button_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' },  :class => "btn btn-default"%>
                </button_to>
              </div>
            </div>
        <% end %>
          </div>
        </div>
    <% end %>
  </div>
</section>