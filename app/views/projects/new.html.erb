<% provide(:title, "Create Project") %>

<section class="content">
  <div class="wrapper2">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@project, :html => {:class => "form-signin"}) do |f| %>
          <h2 class="form-signin-heading">New project</h2>
          <%= render 'shared/project_error_messages' %>
          <div class="top-buffer"/>
          <%= f.text_field :name, class: 'form-control', placeholder: :name %>
          <div class="top-buffer"/>
          <%= f.text_field :description, class: 'form-control', placeholder: :description %>
          <div class="top-buffer"/>
          <%= f.text_field :start_time, placeholder: :start_time, class: 'form-control', :data => {:provide => "datepicker"} %>
          <div class="top-buffer"/>
          <%= f.text_field :end_time, placeholder: :end_time, class: 'form-control', :data => {:provide => "datepicker"} %>
          <div class="top-buffer"/><br/>
          <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>
